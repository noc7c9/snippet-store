each result in results
    .snippet.column.is-half(id=result.snippet.id, style="order: 0")
        .box
            a.is-pulled-right.button.is-small.is-white.has-text-grey-light.edit-button Edit
            h2.title.is-5= result.snippet.title
            .box.content-container
                p.is-marginless.content= result.snippet.content
                .copy-button.is-size-4
            if result.snippet.tags
                .tags
                    each tag in result.snippet.tags
                        a= '#' + tag
