.snippet.column.is-half(id=id)
    .box
        a.is-pulled-right.button.is-small.is-white.has-text-grey-light.edit-button Edit
        h2.title.is-5= title
        .box.content-container
            p.is-marginless.content= content
            .copy-button.is-size-4 Click to Copy
        if tags
            .tags
                each t in tags
                    a= '#' + t
